{
  "builds": [
    {
      "src": "career_cast/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "installCommand": "pip install -r requirements.txt",
  "buildCommand": "python manage.py collectstatic --noinput",
  "routes": [
    { 
      "src": "/run-migrations",
      "dest": "api/migrate.py"
    },
    { 
      "src": "/(.*)", 
      "dest": "career_cast/wsgi.py" 
    }
  ]
}
