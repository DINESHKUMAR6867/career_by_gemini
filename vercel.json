{
  "builds": [
    {
      "src": "career_cast/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "career_cast/wsgi.py" }
  ],
  "installCommand": "pip install -r requirements.txt"
}
